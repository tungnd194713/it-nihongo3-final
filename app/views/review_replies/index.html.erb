<p id="notice"><%= notice %></p>

<h1>Review Replies</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @review_replies.each do |review_reply| %>
      <tr>
        <td><%= review_reply.review_id %></td>
        <td><%= review_reply.comment %></td>
        <td><%= link_to 'Show', review_reply %></td>
        <td><%= link_to 'Edit', edit_review_reply_path(review_reply) %></td>
        <td><%= link_to 'Destroy', review_reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review Reply', new_review_reply_path %>
