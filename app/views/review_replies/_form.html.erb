<%= simple_form_for([@book,@review,@review_reply]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :review_id , value: @review.id%>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
